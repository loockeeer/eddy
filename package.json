{
  "name": "eddy",
  "version": "1.0.1-beta",
  "author": "loockeeer",
  "description": "Discord dumb chatbot written in JavaScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node prestart.js && node .",
    "watch": "tsc-watch --onSuccess \"node .\"",
    "format": "prettier --write src",
    "preinstall": "npm install better-sqlite3@'^7.0.0' --no-save --build-from-source --sqlite3=\"$(pwd)/amalgamation\""
  },
  "prettier": {
    "semi": false
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loockeeer/eddy.git"
  },
  "bugs": {
    "url": "https://github.com/loockeeer/eddy/issues"
  },
  "homepage": "https://github.com/loockeeer/eddy#readme",
  "dependencies": {
    "boxen": "^4.2.0",
    "chalk": "^4.1.0",
    "dayjs": "^1.10.4",
    "discord-eval.ts": "^1.0.14",
    "discord.js": "^12.4.1",
    "dotenv": "^8.2.0",
    "enmap": "^5.8.2",
    "figlet": "^1.5.0",
    "prettier": "^2.1.2",
    "regex-parser": "^2.2.11",
    "tims": "^2.0.4",
    "yargs-parser": "^20.2.4",
  },
  "devDependencies": {
    "@types/boxen": "^3.0.1",
    "@types/yargs-parser": "^20.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/figlet": "^1.2.1",
    "@types/node": "^14.14.6",
    "@types/prettier": "^2.2.1",
    "@types/ws": "^7.2.9",
    "make-bot.ts": "^1.2.9",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.5",
    "node-gyp": "^7.1.2"
  }
}
